// টোকেন মডিউল - ভাষা স্ব-হোস্টিং কম্পাইলারের জন্য
// টোকেন টাইপ সংজ্ঞা, কীওয়ার্ড ম্যাপিং এবং ইউটিলিটি

// টোকেন টাইপ ধ্রুবক
ধরি অবৈধ = "অবৈধ";
ধরি শেষ = "শেষ";

// শনাক্তকারী এবং লিটারেল
ধরি পরিচয় = "পরিচয়";
ধরি পূর্ণসংখ্যা_টোকেন = "পূর্ণসংখ্যা";
ধরি দশমিক_টোকেন = "দশমিক";
ধরি স্ট্রিং_টোকেন = "স্ট্রিং";

// অপারেটর
ধরি সমান = "=";
ধরি যোগ = "+";
ধরি বিয়োগ = "-";
ধরি না = "!";
ধরি গুণ = "*";
ধরি ভাগ = "/";
ধরি ভাগশেষ = "%";

ধরি ছোট = "<";
ধরি বড় = ">";
ধরি সমান_সমান = "==";
ধরি অসমান = "!=";
ধরি ছোট_সমান = "<=";
ধরি বড়_সমান = ">=";

ধরি এবং = "&&";
ধরি অথবা = "||";

// বিটওয়াইজ অপারেটর
ধরি বিট_এবং = "&";
ধরি বিট_অথবা = "|";
ধরি বিট_এক্সঅর = "^";
ধরি বিট_না = "~";
ধরি বাম_সরান = "<<";
ধরি ডান_সরান = ">>";

// বিভাজক
ধরি কমা = ",";
ধরি সেমিকোলন = ";";
ধরি কোলন = ":";

ধরি প্রথম_বন্ধনী_শুরু = "(";
ধরি প্রথম_বন্ধনী_শেষ = ")";
ধরি দ্বিতীয়_বন্ধনী_শুরু = "{";
ধরি দ্বিতীয়_বন্ধনী_শেষ = "}";
ধরি তৃতীয়_বন্ধনী_শুরু = "[";
ধরি তৃতীয়_বন্ধনী_শেষ = "]";

// কীওয়ার্ড (বাংলা)
ধরি ধরি_শব্দ = "ধরি";
ধরি ফাংশন_শব্দ = "ফাংশন";
ধরি যদি_শব্দ = "যদি";
ধরি নাহলে_শব্দ = "নাহলে";
ধরি ফেরত_শব্দ = "ফেরত";
ধরি সত্য_শব্দ = "সত্য";
ধরি মিথ্যা_শব্দ = "মিথ্যা";
ধরি যতক্ষণ_শব্দ = "যতক্ষণ";
ধরি পর্যন্ত_শব্দ = "পর্যন্ত";
ধরি বিরতি_শব্দ = "বিরতি";
ধরি চালিয়ে_যাও_শব্দ = "চালিয়ে_যাও";
ধরি অন্তর্ভুক্ত_শব্দ = "অন্তর্ভুক্ত";

// নতুন_টোকেন - নতুন টোকেন তৈরি করো
ধরি নতুন_টোকেন = ফাংশন(টাইপ, লিটারেল, লাইন, কলাম) {
    ফেরত {
        "টাইপ": টাইপ,
        "লিটারেল": লিটারেল,
        "লাইন": লাইন,
        "কলাম": কলাম
    };
};

// কীওয়ার্ড - কীওয়ার্ড ম্যাপিং
ধরি কীওয়ার্ড = {
    "ধরি": ধরি_শব্দ,
    "ফাংশন": ফাংশন_শব্দ,
    "যদি": যদি_শব্দ,
    "নাহলে": নাহলে_শব্দ,
    "ফেরত": ফেরত_শব্দ,
    "সত্য": সত্য_শব্দ,
    "মিথ্যা": মিথ্যা_শব্দ,
    "যতক্ষণ": যতক্ষণ_শব্দ,
    "পর্যন্ত": পর্যন্ত_শব্দ,
    "বিরতি": বিরতি_শব্দ,
    "চালিয়ে_যাও": চালিয়ে_যাও_শব্দ,
    "অন্তর্ভুক্ত": অন্তর্ভুক্ত_শব্দ
};

// শনাক্তকারী_খুঁজো - শনাক্তকারী কীওয়ার্ড কিনা পরীক্ষা করো
ধরি শনাক্তকারী_খুঁজো = ফাংশন(নাম) {
    যদি (চাবি_আছে(কীওয়ার্ড, নাম)) {
        ফেরত কীওয়ার্ড[নাম];
    }
    ফেরত পরিচয়;
};

// বাংলা_অঙ্ক - বাংলা অঙ্ক থেকে ইংরেজি অঙ্কে রূপান্তর
ধরি বাংলা_অঙ্ক = {
    "০": "0",
    "১": "1",
    "২": "2",
    "৩": "3",
    "৪": "4",
    "৫": "5",
    "৬": "6",
    "৭": "7",
    "৮": "8",
    "৯": "9"
};

// বাংলা_সংখ্যা_রূপান্তর - বাংলা সংখ্যাকে ইংরেজি সংখ্যায় রূপান্তর করো
ধরি বাংলা_সংখ্যা_রূপান্তর = ফাংশন(লেখা) {
    ধরি ফলাফল = "";
    ধরি দৈর্ঘ = দৈর্ঘ্য(লেখা);
    
    পর্যন্ত (ধরি i = ০; i < দৈর্ঘ; i = i + ১) {
        ধরি অক্ষর_মান = অক্ষর(লেখা, i);
        
        // বাংলা অঙ্ক কিনা পরীক্ষা করো
        যদি (চাবি_আছে(বাংলা_অঙ্ক, অক্ষর_মান)) {
            ফলাফল = ফলাফল + বাংলা_অঙ্ক[অক্ষর_মান];
        } নাহলে {
            ফলাফল = ফলাফল + অক্ষর_মান;
        }
    }
    
    ফেরত ফলাফল;
};

// অঙ্ক_কিনা - অক্ষর অঙ্ক কিনা পরীক্ষা করো (বাংলা বা ইংরেজি)
ধরি অঙ্ক_কিনা = ফাংশন(অক্ষর_মান) {
    ধরি কোড_মান = কোড(অক্ষর_মান);
    // ইংরেজি অঙ্ক: ৪৮-৫৭ (0-9)
    // বাংলা অঙ্ক: ২৫৩৪-২৫৪৩ (০-৯)
    ফেরত (কোড_মান >= ৪৮ && কোড_মান <= ৫৭) || (কোড_মান >= ২৫৩৪ && কোড_মান <= ২৫৪৩);
};

// বর্ণ_কিনা - অক্ষর বর্ণ কিনা পরীক্ষা করো (ইংরেজি বা বাংলা)
ধরি বর্ণ_কিনা = ফাংশন(অক্ষর_মান) {
    ধরি কোড_মান = কোড(অক্ষর_মান);
    // ইংরেজি: a-z (৯৭-১২২), A-Z (৬৫-৯০), আন্ডারস্কোর (৯৫)
    // বাংলা: ২৪৩২-২৫৫৯ (বাংলা বর্ণ এবং মাত্রা)
    ফেরত (কোড_মান >= ৬৫ && কোড_মান <= ৯০) || 
           (কোড_মান >= ৯৭ && কোড_মান <= ১২২) || 
           কোড_মান == ৯৫ ||
           (কোড_মান >= ২৪৩২ && কোড_মান <= ২৫৫৯);
};

// ফাঁকা_স্থান_কিনা - অক্ষর ফাঁকা স্থান কিনা পরীক্ষা করো
ধরি ফাঁকা_স্থান_কিনা = ফাংশন(অক্ষর_মান) {
    ধরি কোড_মান = কোড(অক্ষর_মান);
    // স্পেস (৩২), ট্যাব (৯), নিউলাইন (১০), ক্যারিজ রিটার্ন (১৩)
    ফেরত কোড_মান == ৩২ || কোড_মান == ৯ || কোড_মান == ১০ || কোড_মান == ১৩;
};

// টোকেন_থেকে_লেখা - টোকেনকে লেখায় রূপান্তর করো
ধরি টোকেন_থেকে_লেখা = ফাংশন(টোকেন) {
    ফেরত "টোকেন{টাইপ: " + টোকেন["টাইপ"] + ", লিটারেল: '" + টোকেন["লিটারেল"] + 
           "', লাইন: " + লেখা(টোকেন["লাইন"]) + ", কলাম: " + লেখা(টোকেন["কলাম"]) + "}";
};

// মডিউল রপ্তানি সম্পন্ন
লেখ("টোকেন মডিউল লোড হয়েছে");

