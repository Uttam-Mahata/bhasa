// সেট মডিউল - Set Data Structure Module
// Implements a set (unique elements) using arrays

// নতুন_সেট - Create an empty set
ধরি নতুন_সেট = ফাংশন() {
    ফেরত [];
};

// ধারণ_করে - Check if set contains an element
ধরি ধারণ_করে = ফাংশন(সেট, উপাদান) {
    ধরি আকার_মান = দৈর্ঘ্য(সেট);
    ধরি i = 0;
    যতক্ষণ (i < আকার_মান) {
        যদি (সেট[i] == উপাদান) {
            ফেরত সত্য;
        }
        i = i + 1;
    }
    ফেরত মিথ্যা;
};

// যোগ_করো - Add an element to the set (only if not present)
ধরি যোগ_করো = ফাংশন(সেট, উপাদান) {
    যদি (ধারণ_করে(সেট, উপাদান)) {
        ফেরত সেট;  // Element already exists
    }
    ফেরত যোগ(সেট, উপাদান);
};

// মুছো - Remove an element from the set
ধরি মুছো = ফাংশন(সেট, উপাদান) {
    ধরি নতুন_সেট = [];
    ধরি আকার_মান = দৈর্ঘ্য(সেট);
    ধরি i = 0;
    যতক্ষণ (i < আকার_মান) {
        যদি (সেট[i] != উপাদান) {
            নতুন_সেট = যোগ(নতুন_সেট, সেট[i]);
        }
        i = i + 1;
    }
    ফেরত নতুন_সেট;
};

// একত্রীকরণ - Union of two sets
ধরি একত্রীকরণ = ফাংশন(প্রথম_সেট, দ্বিতীয়_সেট) {
    ধরি ফলাফল = প্রথম_সেট;
    ধরি আকার_মান = দৈর্ঘ্য(দ্বিতীয়_সেট);
    ধরি i = 0;
    যতক্ষণ (i < আকার_মান) {
        ফলাফল = যোগ_করো(ফলাফল, দ্বিতীয়_সেট[i]);
        i = i + 1;
    }
    ফেরত ফলাফল;
};

// ছেদ - Intersection of two sets
ধরি ছেদ = ফাংশন(প্রথম_সেট, দ্বিতীয়_সেট) {
    ধরি ফলাফল = [];
    ধরি আকার_মান = দৈর্ঘ্য(প্রথম_সেট);
    ধরি i = 0;
    যতক্ষণ (i < আকার_মান) {
        যদি (ধারণ_করে(দ্বিতীয়_সেট, প্রথম_সেট[i])) {
            ফলাফল = যোগ(ফলাফল, প্রথম_সেট[i]);
        }
        i = i + 1;
    }
    ফেরত ফলাফল;
};

// পার্থক্য - Difference of two sets (elements in set1 but not in set2)
ধরি পার্থক্য = ফাংশন(প্রথম_সেট, দ্বিতীয়_সেট) {
    ধরি ফলাফল = [];
    ধরি আকার_মান = দৈর্ঘ্য(প্রথম_সেট);
    ধরি i = 0;
    যতক্ষণ (i < আকার_মান) {
        যদি (!ধারণ_করে(দ্বিতীয়_সেট, প্রথম_সেট[i])) {
            ফলাফল = যোগ(ফলাফল, প্রথম_সেট[i]);
        }
        i = i + 1;
    }
    ফেরত ফলাফল;
};

// আকার - Get set size
ধরি আকার = ফাংশন(সেট) {
    ফেরত দৈর্ঘ্য(সেট);
};

// খালি_কিনা - Check if set is empty
ধরি খালি_কিনা = ফাংশন(সেট) {
    ফেরত দৈর্ঘ্য(সেট) == 0;
};
