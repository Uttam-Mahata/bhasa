// লিংকড_তালিকা মডিউল - LinkedList Data Structure Module
// Implements a linked list using nested arrays: [value, next_node]

// নতুন_তালিকা - Create an empty linked list
ধরি নতুন_তালিকা = ফাংশন() {
    ফেরত 0;  // null represents empty list
};

// নোড_তৈরি - Create a new node
ধরি নোড_তৈরি = ফাংশন(মান, পরবর্তী) {
    ফেরত [মান, পরবর্তী];
};

// প্রথমে_যোগ - Insert element at the beginning
ধরি প্রথমে_যোগ = ফাংশন(তালিকা, মান) {
    ফেরত নোড_তৈরি(মান, তালিকা);
};

// শেষে_যোগ - Insert element at the end
ধরি শেষে_যোগ = ফাংশন(তালিকা, মান) {
    যদি (তালিকা == 0) {
        ফেরত নোড_তৈরি(মান, 0);
    }
    
    // Traverse to the last node
    ধরি বর্তমান = তালিকা;
    যতক্ষণ (সত্য) {
        ধরি পরবর্তী = শেষ(বর্তমান);
        যদি (পরবর্তী == 0) {
            // Found last node, create new list with updated last node
            ধরি নতুন_শেষ_নোড = নোড_তৈরি(প্রথম(বর্তমান), নোড_তৈরি(মান, 0));
            ফেরত নতুন_শেষ_নোড;
        }
        বর্তমান = পরবর্তী;
    }
    ফেরত তালিকা;
};

// খুঁজুন - Find if a value exists in the list
ধরি খুঁজুন = ফাংশন(তালিকা, মান) {
    ধরি বর্তমান = তালিকা;
    যতক্ষণ (বর্তমান != 0) {
        ধরি বর্তমান_মান = প্রথম(বর্তমান);
        যদি (বর্তমান_মান == মান) {
            ফেরত সত্য;
        }
        বর্তমান = শেষ(বর্তমান);
    }
    ফেরত মিথ্যা;
};

// দৈর্ঘ্য_বের_করো - Get length of linked list
ধরি দৈর্ঘ্য_বের_করো = ফাংশন(তালিকা) {
    ধরি গণনা = 0;
    ধরি বর্তমান = তালিকা;
    যতক্ষণ (বর্তমান != 0) {
        গণনা = গণনা + 1;
        বর্তমান = শেষ(বর্তমান);
    }
    ফেরত গণনা;
};

// খালি_কিনা - Check if list is empty
ধরি খালি_কিনা = ফাংশন(তালিকা) {
    ফেরত তালিকা == 0;
};

// প্রথম_মুছো - Remove first element
// Returns: [new_list, removed_value] or [list, 0] if empty
ধরি প্রথম_মুছো = ফাংশন(তালিকা) {
    যদি (তালিকা == 0) {
        ফেরত [0, 0];
    }
    ধরি মান = প্রথম(তালিকা);
    ধরি পরবর্তী = শেষ(তালিকা);
    ফেরত [পরবর্তী, মান];
};
