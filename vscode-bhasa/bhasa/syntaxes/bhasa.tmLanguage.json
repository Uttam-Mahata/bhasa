{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Bhasa",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bhasa",
          "match": "//.*$"
        },
        {
          "name": "comment.block.bhasa",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bhasa",
          "match": "\\b(ধরি|ফাংশন|যদি|নাহলে|ফেরত|যতক্ষণ|পর্যন্ত|বিরতি|চালিয়ে_যাও|অন্তর্ভুক্ত|let|function|if|else|return|while|for|break|continue|import)\\b"
        },
        {
          "name": "constant.language.bhasa",
          "match": "\\b(সত্য|মিথ্যা|true|false|null)\\b"
        },
        {
          "name": "storage.type.bhasa",
          "match": "\\b(বাইট|ছোট_সংখ্যা|পূর্ণসংখ্যা|দীর্ঘ_সংখ্যা|দশমিক|দশমিক_দ্বিগুণ|অক্ষর|পাঠ্য|বুলিয়ান|তালিকা|ম্যাপ|হিসাবে|byte|short|int|long|float|double|char|string|boolean|list|map|as)\\b"
        },
        {
          "name": "keyword.other.bhasa",
          "match": "\\b(স্ট্রাক্ট|গণনা|struct|enum)\\b"
        },
        {
          "name": "keyword.control.oop.bhasa",
          "match": "\\b(শ্রেণী|পদ্ধতি|নির্মাতা|এই|নতুন|প্রসারিত|সার্বজনীন|ব্যক্তিগত|সুরক্ষিত|স্থির|বিমূর্ত|চুক্তি|বাস্তবায়ন|উর্ধ্ব|পুনর্সংজ্ঞা|চূড়ান্ত|class|method|constructor|this|new|extends|public|private|protected|static|abstract|interface|implements|super|override|final)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.bhasa",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bhasa",
              "match": "\\\\(n|t|r|\\\\|\")"
            }
          ]
        },
        {
          "name": "string.quoted.single.bhasa",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.bhasa",
              "match": "\\\\(n|t|r|\\\\|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.bhasa",
          "match": "\\b[0-9০-৯]+\\.[0-9০-৯]+\\b"
        },
        {
          "name": "constant.numeric.integer.bhasa",
          "match": "\\b[0-9০-৯]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.bhasa",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.comparison.bhasa",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.bhasa",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.bhasa",
          "match": "(=|\\+=|\\-=|\\*=|\\/=)"
        },
        {
          "name": "keyword.operator.bitwise.bhasa",
          "match": "(&|\\||\\^|<<|>>)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.bhasa",
          "match": "\\b(লেখ|দৈর্ঘ্য|ধাক্কা|পপ|প্রথম|শেষ|বাকি|রাখ|কী|মান|লুপ|print|len|push|pop|first|last|rest|puts|keys|values|loop)\\b"
        }
      ]
    }
  },
  "scopeName": "source.bhasa"
}
