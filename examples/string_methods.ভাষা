// স্ট্রিং মেথড পরীক্ষা (String Methods Test)

লেখ("=== স্ট্রিং মেথড পরীক্ষা ===");
লেখ("");

// বিভক্ত (split)
লেখ("১. বিভক্ত (split):");
ধরি বাক্য = "আমি ভাষা শিখছি";
ধরি শব্দ = বিভক্ত(বাক্য, " ");
লেখ("বাক্য: আমি ভাষা শিখছি");
লেখ("শব্দগুলো:");
লেখ(শব্দ);
লেখ("");

// যুক্ত (join)
লেখ("২. যুক্ত (join):");
ধরি তালিকা = ["বাংলা", "একটি", "সুন্দর", "ভাষা"];
ধরি যুক্ত_বাক্য = যুক্ত(তালিকা, " ");
লেখ("তালিকা থেকে বাক্য:");
লেখ(যুক্ত_বাক্য);
লেখ("");

// উপরে (uppercase)
লেখ("৩. উপরে (uppercase):");
ধরি নাম = "programming";
লেখ("ছোট হাতের: programming");
লেখ("বড় হাতের:");
লেখ(উপরে(নাম));
লেখ("");

// নিচে (lowercase)
লেখ("৪. নিচে (lowercase):");
ধরি দেশ = "HELLO";
লেখ("বড় হাতের: HELLO");
লেখ("ছোট হাতের:");
লেখ(নিচে(দেশ));
লেখ("");

// ছাঁটো (trim)
লেখ("৫. ছাঁটো (trim):");
ধরি text = "   হ্যালো বিশ্ব   ";
লেখ("আগে (স্পেস সহ): '   হ্যালো বিশ্ব   '");
লেখ("পরে (ছাঁটো):");
লেখ(ছাঁটো(text));
লেখ("");

// প্রতিস্থাপন (replace)
লেখ("৬. প্রতিস্থাপন (replace):");
ধরি বার্তা = "আমি জাভা পছন্দ করি";
ধরি নতুন_বার্তা = প্রতিস্থাপন(বার্তা, "জাভা", "ভাষা");
লেখ("আগে: আমি জাভা পছন্দ করি");
লেখ("পরে:");
লেখ(নতুন_বার্তা);
লেখ("");

// খুঁজুন (indexOf)
লেখ("৭. খুঁজুন (indexOf):");
ধরি পূর্ণ_বাক্য = "প্রোগ্রামিং একটি সুন্দর শিল্প";
ধরি সূচক = খুঁজুন(পূর্ণ_বাক্য, "সুন্দর");
লেখ("বাক্য: প্রোগ্রামিং একটি সুন্দর শিল্প");
লেখ("'সুন্দর' এর সূচক:");
লেখ(সূচক);

ধরি না_পাওয়া = খুঁজুন(পূর্ণ_বাক্য, "xyz");
লেখ("'xyz' এর সূচক (পাওয়া যায়নি):");
লেখ(না_পাওয়া);
লেখ("");

লেখ("=== সব পরীক্ষা সম্পন্ন! ===");
