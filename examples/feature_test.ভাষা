// ভাষা ফিচার পরীক্ষা (Feature Test)

লেখ("=== ভাষা ফিচার পরীক্ষা ===");
লেখ("");

// ১. মৌলিক চলক এবং গণিত
লেখ("১. মৌলিক চলক এবং গণিত:");
ধরি a = 10;
ধরি b = 5;
লেখ("যোগ:");
লেখ(a + b);
লেখ("বিয়োগ:");
লেখ(a - b);
লেখ("গুণ:");
লেখ(a * b);
লেখ("ভাগ:");
লেখ(a / b);
লেখ("ভাগশেষ:");
লেখ(a % b);
লেখ("");

// ২. তুলনা অপারেটর
লেখ("২. তুলনা অপারেটর:");
লেখ("a == a:");
লেখ(a == a);
লেখ("a != b:");
লেখ(a != b);
লেখ("a > b:");
লেখ(a > b);
লেখ("b < a:");
লেখ(b < a);
লেখ("a >= a:");
লেখ(a >= a);
লেখ("b <= a:");
লেখ(b <= a);
লেখ("");

// ৩. লজিক্যাল NOT
লেখ("৩. লজিক্যাল NOT:");
লেখ("!সত্য:");
লেখ(!সত্য);
লেখ("!মিথ্যা:");
লেখ(!মিথ্যা);
লেখ("");

// ৪. স্ট্রিং
লেখ("৪. স্ট্রিং:");
ধরি str1 = "নমস্কার";
ধরি str2 = "বিশ্ব";
লেখ("কনক্যাটেনেশন:");
লেখ(str1 + " " + str2);
লেখ("দৈর্ঘ্য:");
লেখ(দৈর্ঘ্য("বাংলাদেশ"));
লেখ("");

// ৫. বুলিয়ান
লেখ("৫. বুলিয়ান:");
ধরি সত্যটা = সত্য;
ধরি মিথ্যাটা = মিথ্যা;
লেখ("সত্য:");
লেখ(সত্যটা);
লেখ("মিথ্যা:");
লেখ(মিথ্যাটা);
লেখ("");

// ৬. শর্ত (If-Else)
লেখ("৬. শর্ত পরীক্ষা:");
ধরি x = 10;
যদি (x > 5) {
    লেখ("x বড়");
} নাহলে {
    লেখ("x ছোট");
}
লেখ("");

// ৭. লুপ (While)
লেখ("৭. লুপ:");
ধরি i = 1;
যতক্ষণ (i <= 3) {
    লেখ(i);
    i = i + 1;
}
লেখ("");

// ৮. ফাংশন
লেখ("৮. ফাংশন:");
ধরি যোগ = ফাংশন(x, y) {
    ফেরত x + y;
};
লেখ("যোগ(5, 3):");
লেখ(যোগ(5, 3));
লেখ("");

// ৯. রিকার্শন
লেখ("৯. রিকার্শন:");
ধরি ফ্যাক্টোরিয়াল = ফাংশন(n) {
    যদি (n <= 1) {
        ফেরত 1;
    } নাহলে {
        ফেরত n * ফ্যাক্টোরিয়াল(n - 1);
    }
};
লেখ("5! =");
লেখ(ফ্যাক্টোরিয়াল(5));
লেখ("");

// ১০. ক্লোজার
লেখ("১০. ক্লোজার:");
ধরি কাউন্টার_তৈরি = ফাংশন() {
    ধরি গণনা = 0;
    ফেরত ফাংশন() {
        গণনা = গণনা + 1;
        ফেরত গণনা;
    };
};
ধরি কাউন্টার = কাউন্টার_তৈরি();
লেখ("কল 1:");
লেখ(কাউন্টার());
লেখ("কল 2:");
লেখ(কাউন্টার());
লেখ("");

// ১১. উচ্চতর-ক্রম ফাংশন
লেখ("১১. উচ্চতর-ক্রম ফাংশন:");
ধরি প্রয়োগ = ফাংশন(fn, মান) {
    ফেরত fn(মান);
};
ধরি দ্বিগুণ = ফাংশন(x) {
    ফেরত x * 2;
};
লেখ("দ্বিগুণ(5):");
লেখ(প্রয়োগ(দ্বিগুণ, 5));
লেখ("");

// ১২. অ্যারে
লেখ("১২. অ্যারে:");
ধরি সংখ্যা = [1, 2, 3, 4, 5];
লেখ("অ্যারে:");
লেখ(সংখ্যা);
লেখ("দৈর্ঘ্য:");
লেখ(দৈর্ঘ্য(সংখ্যা));
লেখ("প্রথম:");
লেখ(প্রথম(সংখ্যা));
লেখ("শেষ:");
লেখ(শেষ(সংখ্যা));
লেখ("বাকি:");
লেখ(বাকি(সংখ্যা));
লেখ("যোগ(6):");
লেখ(যোগ(সংখ্যা, 6));
লেখ("ইন্ডেক্স [2]:");
লেখ(সংখ্যা[2]);
লেখ("");

// ১৩. হ্যাশ
লেখ("১৩. হ্যাশ:");
ধরি ব্যক্তি = {
    "নাম": "রহিম",
    "বয়স": 25
};
লেখ("হ্যাশ:");
লেখ(ব্যক্তি);
লেখ("নাম:");
লেখ(ব্যক্তি["নাম"]);
লেখ("");

// ১৪. টাইপ
লেখ("১৪. টাইপ চেকিং:");
লেখ("ইন্টিজার:");
লেখ(টাইপ(10));
লেখ("স্ট্রিং:");
লেখ(টাইপ("হ্যালো"));
লেখ("বুলিয়ান:");
লেখ(টাইপ(সত্য));
লেখ("");

// ১৫. বেঙ্গলি সংখ্যা
লেখ("১৫. বেঙ্গলি সংখ্যা:");
ধরি বেঙ্গলি = ০ + ১ + ২ + ৩ + ৪ + ৫ + ৬ + ৭ + ৮ + ৯;
লেখ("যোগফল:");
লেখ(বেঙ্গলি);
লেখ("");

লেখ("=== সব পরীক্ষা সম্পন্ন! ===");
