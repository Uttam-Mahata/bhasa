// লজিক্যাল অপারেটর পরীক্ষা (Logical Operators Test)

লেখ("=== লজিক্যাল অপারেটর পরীক্ষা ===");
লেখ("");

// AND অপারেটর
লেখ("১. AND অপারেটর (&&):");
লেখ("সত্য && সত্য:");
লেখ(সত্য && সত্য);

লেখ("সত্য && মিথ্যা:");
লেখ(সত্য && মিথ্যা);

লেখ("মিথ্যা && সত্য:");
লেখ(মিথ্যা && সত্য);

লেখ("মিথ্যা && মিথ্যা:");
লেখ(মিথ্যা && মিথ্যা);
লেখ("");

// OR অপারেটর
লেখ("২. OR অপারেটর (||):");
লেখ("সত্য || সত্য:");
লেখ(সত্য || সত্য);

লেখ("সত্য || মিথ্যা:");
লেখ(সত্য || মিথ্যা);

লেখ("মিথ্যা || সত্য:");
লেখ(মিথ্যা || সত্য);

লেখ("মিথ্যা || মিথ্যা:");
লেখ(মিথ্যা || মিথ্যা);
লেখ("");

// সংখ্যা দিয়ে AND
লেখ("৩. সংখ্যা দিয়ে AND:");
ধরি x = 10;
ধরি y = 5;
লেখ("x > 5 && y < 10:");
লেখ(x > 5 && y < 10);

লেখ("x > 15 && y < 10:");
লেখ(x > 15 && y < 10);
লেখ("");

// সংখ্যা দিয়ে OR
লেখ("৪. সংখ্যা দিয়ে OR:");
লেখ("x > 5 || y > 10:");
লেখ(x > 5 || y > 10);

লেখ("x < 5 || y > 10:");
লেখ(x < 5 || y > 10);

লেখ("x > 5 || y < 10:");
লেখ(x > 5 || y < 10);
লেখ("");

// জটিল শর্ত
লেখ("৫. জটিল শর্ত:");
ধরি বয়স = 25;
ধরি আয় = 50000;

যদি (বয়স >= 18 && আয় > 30000) {
    লেখ("ঋণের জন্য যোগ্য");
} নাহলে {
    লেখ("ঋণের জন্য অযোগ্য");
}

ধরি score = 45;
যদি (score < 40 || score > 90) {
    লেখ("বিশেষ মনোযোগ প্রয়োজন");
} নাহলে {
    লেখ("স্বাভাবিক");
}
লেখ("");

// সংযুক্ত শর্ত
লেখ("৬. সংযুক্ত শর্ত:");
ধরি a = সত্য;
ধরি b = মিথ্যা;
ধরি c = সত্য;

লেখ("(a && b) || c:");
লেখ((a && b) || c);

লেখ("a && (b || c):");
লেখ(a && (b || c));
লেখ("");

লেখ("=== সব পরীক্ষা সম্পন্ন! ===");
