// লুপ (Loops)

// ১ থেকে ১০ পর্যন্ত মুদ্রণ (Print 1 to 10)
লেখ("১ থেকে ১০:");

ধরি i = ১;
যতক্ষণ (i <= ১০) {
    লেখ(i);
    i = i + ১;
}

// যোগফল গণনা (Calculate sum)
ধরি যোগফল = ০;
ধরি n = ১;

যতক্ষণ (n <= ৫) {
    যোগফল = যোগফল + n;
    n = n + ১;
}

লেখ("১ থেকে ৫ পর্যন্ত যোগফল:");
লেখ(যোগফল);

