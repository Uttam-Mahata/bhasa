// অ্যারে মেথড পরীক্ষা (Array Methods Test)

লেখ("=== অ্যারে মেথড পরীক্ষা ===");
লেখ("");

// উল্টাও (reverse)
লেখ("১. উল্টাও (reverse):");
ধরি সংখ্যা = [1, 2, 3, 4, 5];
লেখ("মূল অ্যারে:");
লেখ(সংখ্যা);
লেখ("উল্টানো অ্যারে:");
লেখ(উল্টাও(সংখ্যা));
লেখ("");

ধরি শব্দ = ["এক", "দুই", "তিন"];
লেখ("শব্দ অ্যারে:");
লেখ(শব্দ);
লেখ("উল্টানো:");
লেখ(উল্টাও(শব্দ));
লেখ("");

// খালি অ্যারে
লেখ("২. খালি অ্যারে:");
ধরি খালি = [];
লেখ("খালি অ্যারে:");
লেখ(খালি);
লেখ("উল্টানো:");
লেখ(উল্টাও(খালি));
লেখ("");

// একটি উপাদান
লেখ("৩. একক উপাদান:");
ধরি একক = [42];
লেখ("একক অ্যারে:");
লেখ(একক);
লেখ("উল্টানো:");
লেখ(উল্টাও(একক));
লেখ("");

লেখ("=== সব পরীক্ষা সম্পন্ন! ===");
