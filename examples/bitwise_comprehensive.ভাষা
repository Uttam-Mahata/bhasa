ধরি clearBit = ফাংশন(num, position) {
    ফেরত num & ~(১ << position);
};

ধরি toggleBit = ফাংশন(num, position) {
    ফেরত num ^ (১ << position);
};

ধরি value = ৮;  // 1000 in binary
লেখ("Initial value: ");
লেখ(value);

