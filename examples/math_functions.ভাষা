// ম্যাথ ফাংশন পরীক্ষা (Math Functions Test)

লেখ("=== ম্যাথ ফাংশন পরীক্ষা ===");
লেখ("");

// শক্তি (power)
লেখ("১. শক্তি (power):");
লেখ("২ এর ঘাত ৩:");
লেখ(শক্তি(2, 3));
লেখ("৫ এর ঘাত ২:");
লেখ(শক্তি(5, 2));
লেখ("১০ এর ঘাত ০:");
লেখ(শক্তি(10, 0));
লেখ("");

// বর্গমূল (square root)
লেখ("২. বর্গমূল (square root):");
লেখ("১৬ এর বর্গমূল:");
লেখ(বর্গমূল(16));
লেখ("২৫ এর বর্গমূল:");
লেখ(বর্গমূল(25));
লেখ("১০০ এর বর্গমূল:");
লেখ(বর্গমূল(100));
লেখ("");

// পরম (absolute value)
লেখ("৩. পরম (absolute value):");
লেখ("পরম(-১০):");
লেখ(পরম(-10));
লেখ("পরম(১৫):");
লেখ(পরম(15));
লেখ("পরম(-৫):");
লেখ(পরম(-5));
লেখ("");

// সর্বোচ্চ (max)
লেখ("৪. সর্বোচ্চ (max):");
লেখ("সর্বোচ্চ(১০, ২০):");
লেখ(সর্বোচ্চ(10, 20));
লেখ("সর্বোচ্চ(৫০, ৩০):");
লেখ(সর্বোচ্চ(50, 30));
লেখ("সর্বোচ্চ(-৫, -১০):");
লেখ(সর্বোচ্চ(-5, -10));
লেখ("");

// সর্বনিম্ন (min)
লেখ("৫. সর্বনিম্ন (min):");
লেখ("সর্বনিম্ন(১০, ২০):");
লেখ(সর্বনিম্ন(10, 20));
লেখ("সর্বনিম্ন(৫০, ৩০):");
লেখ(সর্বনিম্ন(50, 30));
লেখ("সর্বনিম্ন(-৫, -১০):");
লেখ(সর্বনিম্ন(-5, -10));
লেখ("");

// জটিল গণনা
লেখ("৬. জটিল গণনা:");
ধরি a = 5;
ধরি b = 3;
ধরি c = শক্তি(a, 2) + শক্তি(b, 2);
লেখ("৫² + ৩² =");
লেখ(c);

ধরি পিথাগোরাস = বর্গমূল(c);
লেখ("√(৫² + ৩²) =");
লেখ(পিথাগোরাস);
লেখ("");

// বড় সংখ্যা
লেখ("৭. বড় সংখ্যা:");
লেখ("সর্বোচ্চ(১০০০, ৫০০):");
লেখ(সর্বোচ্চ(1000, 500));
লেখ("পরম(-৯৯৯):");
লেখ(পরম(-999));
লেখ("");

লেখ("=== সব পরীক্ষা সম্পন্ন! ===");
