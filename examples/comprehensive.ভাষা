// ব্যাপক উদাহরণ (Comprehensive Example)
// এই প্রোগ্রাম বিভিন্ন ফিচার প্রদর্শন করে

লেখ("=== ভাষা প্রোগ্রামিং ভাষা ===");
লেখ("");

// ১. চলক এবং গণিত
লেখ("১. চলক এবং গণিত:");
ধরি a = ১০;
ধরি b = ২০;
লেখ(a + b);
লেখ(b - a);
লেখ(a * b);
লেখ("");

// ২. স্ট্রিং
লেখ("২. স্ট্রিং:");
ধরি শুভেচ্ছা = "নমস্কার" + " " + "বিশ্ব";
লেখ(শুভেচ্ছা);
লেখ("দৈর্ঘ্য: ");
লেখ(দৈর্ঘ্য(শুভেচ্ছা));
লেখ("");

// ৩. ফাংশন
লেখ("৩. ফাংশন:");
ধরি বর্গ = ফাংশন(x) {
    ফেরত x * x;
};
লেখ("৫ এর বর্গ:");
লেখ(বর্গ(৫));
লেখ("");

// ৪. শর্ত
লেখ("৪. শর্ত:");
ধরি পরীক্ষা = ফাংশন(n) {
    যদি (n % ২ == ০) {
        ফেরত "জোড়";
    } নাহলে {
        ফেরত "বিজোড়";
    }
};
লেখ("১০ হলো:");
লেখ(পরীক্ষা(১০));
লেখ("৭ হলো:");
লেখ(পরীক্ষা(৭));
লেখ("");

// ৫. লুপ
লেখ("৫. লুপ (১ থেকে ৫):");
ধরি i = ১;
যতক্ষণ (i <= ৫) {
    লেখ(i);
    i = i + ১;
}
লেখ("");

// ৬. অ্যারে
লেখ("৬. অ্যারে:");
ধরি তালিকা = [১, ২, ৩, ৪, ৫];
লেখ(তালিকা);
লেখ("প্রথম: ");
লেখ(প্রথম(তালিকা));
লেখ("শেষ: ");
লেখ(শেষ(তালিকা));
লেখ("");

// ৭. হ্যাশ
লেখ("৭. হ্যাশ:");
ধরি তথ্য = {"নাম": "বাংলা", "সংখ্যা": ১০০};
লেখ(তথ্য["নাম"]);
লেখ("");

লেখ("=== সম্পন্ন ===");

