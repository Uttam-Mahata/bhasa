// ফাংশন (Functions)

// যোগ ফাংশন
ধরি যোগ = ফাংশন(a, b) {
    ফেরত a + b;
};

লেখ("১০ + ২০ = ");
লেখ(যোগ(১০, ২০));

// গুণ ফাংশন
ধরি গুণ = ফাংশন(a, b) {
    ফেরত a * b;
};

লেখ("৫ × ৬ = ");
লেখ(গুণ(৫, ৬));

// ফ্যাক্টোরিয়াল ফাংশন (Factorial)
ধরি ফ্যাক্টোরিয়াল = ফাংশন(n) {
    যদি (n == ০) {
        ফেরত ১;
    } নাহলে {
        ফেরত n * ফ্যাক্টোরিয়াল(n - ১);
    }
};

লেখ("৫! = ");
লেখ(ফ্যাক্টোরিয়াল(৫));

