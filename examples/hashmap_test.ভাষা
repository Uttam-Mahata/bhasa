// হ্যাশম্যাপ উন্নত পদ্ধতি পরীক্ষা
// Enhanced HashMap Methods Test

লেখ("=== হ্যাশম্যাপ উন্নত পদ্ধতি পরীক্ষা ===");
লেখ("");

// Create test hash
ধরি ছাত্র = {"নাম": "রহিম", "বয়স": 20, "শ্রেণী": 12};
লেখ("ছাত্র তথ্য:");
লেখ(ছাত্র);
লেখ("");

// Test keys
লেখ("চাবিগুলো (Keys):");
ধরি চাবি = চাবিগুলো(ছাত্র);
লেখ(চাবি);
লেখ("");

// Test values
লেখ("মানগুলো (Values):");
ধরি মান = মানগুলো(ছাত্র);
লেখ(মান);
লেখ("");

// Test hasKey
লেখ("চাবি পরীক্ষা:");
লেখ("'নাম' আছে কি? " + টাইপ(চাবি_আছে(ছাত্র, "নাম")));
লেখ("'ঠিকানা' আছে কি? " + টাইপ(চাবি_আছে(ছাত্র, "ঠিকানা")));
লেখ("");

// Test merge
লেখ("দুটি হ্যাশ একত্রিত করা:");
ধরি অতিরিক্ত = {"বিষয়": "গণিত", "নম্বর": 95};
লেখ("প্রথম হ্যাশ: " + টাইপ(ছাত্র));
লেখ("দ্বিতীয় হ্যাশ: " + টাইপ(অতিরিক্ত));

ধরি মিলিত = একত্রিত(ছাত্র, অতিরিক্ত);
লেখ("একত্রিত ফলাফল:");
লেখ(মিলিত);
লেখ("");

// Test with numeric keys
লেখ("সংখ্যাগত চাবি সহ পরীক্ষা:");
ধরি স্কোর = {1: "প্রথম", 2: "দ্বিতীয়", 3: "তৃতীয়"};
লেখ(স্কোর);
লেখ("চাবি 2 আছে কি? " + টাইপ(চাবি_আছে(স্কোর, 2)));
লেখ("চাবি 5 আছে কি? " + টাইপ(চাবি_আছে(স্কোর, 5)));
লেখ("");

// Test overwriting in merge
লেখ("একই চাবি দিয়ে একত্রিত:");
ধরি হ্যাশ_এক = {"a": 1, "b": 2};
ধরি হ্যাশ_দুই = {"b": 20, "c": 3};
ধরি চূড়ান্ত = একত্রিত(হ্যাশ_এক, হ্যাশ_দুই);
লেখ("প্রথম: {a: 1, b: 2}");
লেখ("দ্বিতীয়: {b: 20, c: 3}");
লেখ("ফলাফল (দ্বিতীয় চাবি প্রতিস্থাপন করে):");
লেখ(চূড়ান্ত);
লেখ("");

লেখ("✅ হ্যাশম্যাপ পরীক্ষা সম্পন্ন!");
