// ফিবোনাচ্চি সংখ্যা (Fibonacci Numbers)

ধরি ফিবোনাচ্চি = ফাংশন(n) {
    যদি (n == ০) {
        ফেরত ০;
    } নাহলে {
        যদি (n == ১) {
            ফেরত ১;
        } নাহলে {
            ফেরত ফিবোনাচ্চি(n - ১) + ফিবোনাচ্চি(n - ২);
        }
    }
};

লেখ("প্রথম ১০টি ফিবোনাচ্চি সংখ্যা:");
ধরি i = ০;
যতক্ষণ (i < ১০) {
    লেখ(ফিবোনাচ্চি(i));
    i = i + ১;
}

