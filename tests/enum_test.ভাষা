লেখ("Status enum:");
লেখ(Status);

ধরি success = Status.Success;
লেখ("Success variant:");
লেখ(success);

// Test 5: Store enum values in variables
লেখ("\nTest 5: Store and use enum values");
ধরি currentDir = Direction.North;
লেখ("Current direction:");
লেখ(currentDir);

currentDir = Direction.South;
লেখ("Changed to:");
লেখ(currentDir);

// Test 6: Enum in array
লেখ("\nTest 6: Enum in array");
ধরি directions = [Direction.North, Direction.East, Direction.South];
লেখ("First direction:");
লেখ(directions[০]);

// Test 7: Different enum types
লেখ("\nTest 7: Multiple enum types");
