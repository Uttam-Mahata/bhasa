// Test 2: Methods that access fields
লেখ("পরীক্ষা ২: ফিল্ড এক্সেস সহ মেথড");
শ্রেণী Rectangle {
    সার্বজনীন width: পূর্ণসংখ্যা;
    সার্বজনীন height: পূর্ণসংখ্যা;
    
    সার্বজনীন নির্মাতা(w: পূর্ণসংখ্যা, h: পূর্ণসংখ্যা) {
        এই.width = w;
        এই.height = h;
    }
    
    সার্বজনীন পদ্ধতি area(): পূর্ণসংখ্যা {
        ফেরত এই.width * এই.height;
    }
}

ধরি rect = নতুন Rectangle(৪, ৫);
ধরি ক্ষেত্রফল = rect.area();
লেখ("  Rectangle(4, 5) এর ক্ষেত্রফল: ", ক্ষেত্রফল);
লেখ("  ✓ পাস");
লেখ("");

// Test 3: Methods that modify fields
লেখ("পরীক্ষা ৩: ফিল্ড পরিবর্তন করে এমন মেথড");
শ্রেণী BankAccount {
    সার্বজনীন balance: পূর্ণসংখ্যা;
    
    সার্বজনীন নির্মাতা(initial: পূর্ণসংখ্যা) {
        এই.balance = initial;
    }
    
    সার্বজনীন পদ্ধতি deposit(amount: পূর্ণসংখ্যা): পূর্ণসংখ্যা {
        এই.balance = এই.balance + amount;
        ফেরত এই.balance;
    }
    
    সার্বজনীন পদ্ধতি withdraw(amount: পূর্ণসংখ্যা): পূর্ণসংখ্যা {
        এই.balance = এই.balance - amount;
        ফেরত এই.balance;
    }
}

ধরি account = নতুন BankAccount(১০০);
লেখ("  প্রারম্ভিক ব্যালেন্স: ", account.balance);
account.deposit(৫০);
লেখ("  ৫০ জমা দেওয়ার পর: ", account.balance);
account.withdraw(৩০);
লেখ("  ৩০ তোলার পর: ", account.balance);
লেখ("  ✓ পাস");
লেখ("");

